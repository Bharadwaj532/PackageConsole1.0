<Window x:Class="PackageConsole.RemoveSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PackageConsole"
        mc:Ignorable="d"
        Title="RemoveSectionWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
        <TextBlock Text="Select Section to Remove:"/>
        <ComboBox x:Name="SectionComboBox" Width="350" Height="30"/>
        <Button Content="Remove Section" Click="RemoveSection_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
